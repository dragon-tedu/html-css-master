mixin tourCard(image,price,title,start,viewPoint,durationCount)
  .tours
    .tour-top
      img.tour-images(src=image alt='thailand')
      span.tour-price From $#{price}
    .tour-content
      h2.tour-title=title 
      .tour-rating
        .tour-review
          .tour-start
            img(src='./images/start.png' alt='tour-rating')
          .tour-review-count
            span #{start} ( #{viewPoint} reviews)
        span.tour-duration Duration: #{durationCount} hours
      a.tour-button(href='#' target='_blank' rel='noopener noreferrer') Tours Price $61

mixin popularItem
  .popular-item
    .popular-image 
      .popular-overlay
      img(src='https://images.unsplash.com/photo-1591017403286-fd8493524e1e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80',
      alt='manila').popular-img
      spand.popular-label Must See
    .popular-content 
      span.popular-time Sep 28 10:00 AM - 1:00 PM
      h3.popular-title Chatuchak Weekend
      .popular-review  
        img(src='./images/start.svg' alt='start').popular-start
